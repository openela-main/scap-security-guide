+<def-group>
+  <definition class="inventory"
+  id="installed_OS_is_rl8" version="2">
+    <metadata>
+      <title>OpenELA 8</title>
+      <affected family="unix">
+        <platform>multi_platform_all</platform>
+      </affected>
+      <reference ref_id="cpe:/o:openela:openela:8"
