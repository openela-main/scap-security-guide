+      <criterion comment="OS version is 8" test_ref="test_rl8_version" />
+    </criteria>
+  </definition>
+
+  <ind:textfilecontent54_test check="all" check_existence="at_least_one_exists" comment="Check os-release ID" id="test_rl8_name" version="1">
